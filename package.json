{
  "name": "@damienmortini/lib",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "build": "npx nx run-many --target=build",
    "build:watch": "npx nx run-many --target=build --watch",
    "serve": "server",
    "bump": "lerna version patch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "git clean -fdx",
    "publish": "npm run build && lerna publish from-package --yes",
    "rewritepackagefiles": "node rewritepackagefiles.js",
    "start": "server --resolve-modules",
    "test": "eslint packages",
    "update": "npm i",
    "upgrade": "ncu --workspaces --upgrade --install always",
    "version": "lerna version"
  },
  "dependencies": {
    "es-module-shims": "^2.8.0"
  },
  "devDependencies": {
    "@damienmortini/eslint-config": "^0.0.28",
    "@damienmortini/server": "^1.0.82",
    "@damienmortini/typescript-config": "^0.0.14",
    "eslint": "^9.39.2",
    "fast-glob": "^3.3.3",
    "jsdoc": "^4.0.5",
    "lerna": "^9.0.3",
    "npm-check-updates": "^19.3.1",
    "nx": "22.3.3",
    "nx-cloud": "latest",
    "sort-package-json": "^3.6.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@nx/nx-linux-x64-gnu": "22.3.3"
  }
}
