{
  "name": "@damienmortini/lib",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "build": "npx nx run-many --target=build",
    "build:watch": "npx nx run-many --target=build --watch",
    "bump": "lerna version patch",
    "fix": "eslint packages --fix",
    "clean": "rimraf --glob \"packages/**/node_modules\"",
    "publish": "lerna publish from-package --yes",
    "rewritepackagefiles": "node rewritepackagefiles.js",
    "start": "server --watchignore=node_modules",
    "test": "eslint packages",
    "update": "npm i",
    "upgrade": "ncu --deep -u",
    "version": "lerna version"
  },
  "dependencies": {
    "es-module-shims": "^1.9.0"
  },
  "devDependencies": {
    "@damienmortini/eslint-config": "^0.0.19",
    "@damienmortini/server": "^1.0.71",
    "@damienmortini/typescript-config": "^0.0.9",
    "eslint": "^8.57.0",
    "fast-glob": "^3.3.2",
    "jsdoc": "^4.0.2",
    "lerna": "^8.1.2",
    "npm-check-updates": "^16.14.18",
    "nx": "18.3.3",
    "nx-cloud": "latest",
    "rimraf": "^5.0.5",
    "sort-package-json": "^2.10.0",
    "typescript": "^5.4.5"
  },
  "optionalDependencies": {
    "@nx/nx-linux-x64-gnu": "18.3.3"
  }
}
