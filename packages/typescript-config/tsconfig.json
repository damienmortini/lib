{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "incremental": true,
    "preserveWatchOutput": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@webgpu/types", "@damienmortini/typescript-config"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
