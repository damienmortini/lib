{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "preserveWatchOutput": true,
    "types": ["node", "dom-navigation", "dom-view-transitions", "@webgpu/types", "@damienmortini/typescript-config"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
